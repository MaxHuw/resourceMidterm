    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
    <link rel="stylesheet" href="/styles/resource-submit.css" type="text/css" />

    <!-- External JS files-->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

    <!-- Internal JS files-->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Inconsolata:400,700" rel="stylesheet">
  </head>
  <body>
    <!-- navbar -->
    <% include partials/_navbar.ejs %>
    <!-- -->
    <section class="container">
      <!-- add new resource form here -->
      <section class="form-container">
        <form class="add-resource-form" method="POST">
            <span class="form-title">Submit A New Resource</span>
            <div class="input-container">
              <input type="text" class="form-control" placeholder="URL">
            </div>
            <div class="input-container">
              <input type="text" class="form-control" placeholder="Title">
            </div>
            <div class="input-container">
              <input type="textarea" class="form-control" placeholder="Description">
            </div>
            <div class="input-container">
              Topic:
              <div class="checkbox-row">
                <div class="checkbox-column">
                  Neuroscience <input type="checkbox" id="neuroCheck">
                  Graphic Design <input type="checkbox" id="graphicCheck">
                </div>
                <div class="checkbox-column">
                  Octopus <input type="checkbox" id="octopusCheck">
                  Creative Code <input type="checkbox" id="creativeCheck">
                </div>
              </div>
            </div>
            <div class="btn-container">
              <button type="submit" class="btn-submit">SUBMIT</button>
            </div>
            <div class="form-footer">
              <p class="thank-you-text">Thank you for your contribution to Resource Wall!</p>
            </div>
        </form>
      </section>
    </section>
  </body>
</html>
